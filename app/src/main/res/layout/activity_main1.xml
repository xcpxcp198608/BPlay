<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="onEvent"
            type="com.wiatec.bplay.activity.MainActivity1.OnEventListener"/>
    </data>

    <LinearLayout
        android:clipChildren="false"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">

            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:background="@color/colorTranslucent"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/et_search"
                android:textColor="@android:color/white"
                android:textSize="24sp"
                android:hint="@string/search"
                android:textColorHint="@color/colorGray"
                android:layout_margin="8dp"
                android:padding="3dp"
                android:drawablePadding="3dp"
                android:drawableLeft="@drawable/ic_search1"
                android:background="@drawable/bg_edit_search"
                android:layout_width="250dp"
                android:layout_height="match_parent" />

            <android.support.v4.widget.Space
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/ibt_person"
                android:background="@drawable/bg_person"
                android:layout_width="56dp"
                android:layout_height="56dp" />
            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        
        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />
        
        <LinearLayout
            android:clipChildren="false"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/ibt_live"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_live"
                android:background="@drawable/bg_item"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_news"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_news"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_movies"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_movies"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_music"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_music"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:clipChildren="false"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp">

            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/ibt_sports"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_sports"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_radios"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:src="@drawable/ic_radios"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_1"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_2"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:background="@drawable/bg_item"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/ibt_favorite"
                android:onClick="@{(view) -> onEvent.onClick(view)}"
                android:background="@drawable/bg_item"
                android:src="@drawable/ic_favorite"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <android.support.v4.widget.Space
                android:layout_width="30dp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

    </LinearLayout>
</layout>